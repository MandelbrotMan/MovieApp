<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.raymondlian.movieappv2.MovieDetailActivityFragment">

    <TextView android:text="Title" android:layout_width="wrap_content"
        android:id="@+id/movieTitleText"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:id="@+id/posterImageView"
        android:layout_below="@+id/movieTitleText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView android:text="Release Date:" android:layout_width="wrap_content"
        android:id="@+id/releaseDateText"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/posterImageView"
        android:layout_marginTop="30dp" />
    <TextView android:text="Average Rating" android:layout_width="wrap_content"
        android:id="@+id/voteAverageText"
        android:layout_height="wrap_content"
        android:layout_below="@+id/releaseDateText"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/posterImageView"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/voteAverageText"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/posterImageView">
        <TextView android:text="Plot" android:layout_width="wrap_content"
            android:id="@+id/synopsisText"
            android:layout_height="wrap_content"
            android:layout_below="@+id/voteAverageText"
            />
    </ScrollView>



</RelativeLayout>
